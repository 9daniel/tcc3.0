@model EstagiosEtec.Models.descricaoVaga

@{
    ViewBag.Title = "Create";
}

<h2>Novo Vaga</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Descrição da Vaga</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Titulo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titulo)
                @Html.ValidationMessageFor(model => model.Titulo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.diaPublicacao, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.diaPublicacao)
                @Html.ValidationMessageFor(model => model.diaPublicacao)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dataMaxima, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dataMaxima)
                @Html.ValidationMessageFor(model => model.dataMaxima)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.empresa, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.empresa)
                @Html.ValidationMessageFor(model => model.empresa)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.valor, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.valor)
                @Html.ValidationMessageFor(model => model.valor)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tipoVagaid, "tipoVagaid", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("tipoVagaid", String.Empty)
                @Html.ValidationMessageFor(model => model.tipoVagaid)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
